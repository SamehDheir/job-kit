// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  userType  UserType @default(USER) @map("user_type")
  avatarUrl String?  @map("avatar_url")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  resumes Resume[]

  @@map("users")
}

enum UserType {
  USER
  COMPANY
}

model Resume {
  id     String @id @default(cuid())
  // IMPORTANT: You must ensure 'userId' is passed in the POST request body
  // or retrieve the user ID from the session/authentication context in the API handler.
  userId String
  user   User   @relation(fields: [userId], references: [id])

  name    String
  email   String
  phone   String
  summary String

  skills    String[] // PostgreSQL array type for simple strings
  languages String[] // PostgreSQL array type for simple strings

  // Json type for arrays of complex objects (EducationItem, ExperienceItem, ProjectItem)
  education  Json
  experience Json
  projects   Json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("resumes")
}
